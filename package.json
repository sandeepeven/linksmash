{
  "name": "linksmash",
  "version": "1.0.1",
  "main": "index.ts",
  "scripts": {
    "start": "nx serve expo",
    "start:expo": "nx serve expo",
    "start:api": "nx serve api",
    "start:all": "nx run-many -t serve -p api expo",
    "android": "cd apps/expo && expo run:android",
    "ios": "cd apps/expo && expo run:ios",
    "web": "cd apps/expo && expo start --web",
    "build-local": "cd apps/expo && npx eas build --platform android --local",
    "prebuild": "cd apps/expo && expo prebuild && node scripts/fix-manifest.js",
    "prebuild:clean": "cd apps/expo && expo prebuild --clean && node scripts/fix-manifest.js",
    "fix:manifest": "cd apps/expo && node scripts/fix-manifest.js",
    "build:api": "nx build api",
    "dev:api": "cd apps/api && npm run dev"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.19",
    "@react-navigation/native-stack": "^7.6.2",
    "expo": "54.0.24",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.8",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "2.28.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-receive-sharing-intent": "^2.0.0",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "4.16.0"
  },
  "devDependencies": {
    "@expo/config-plugins": "^54.0.2",
    "@nx/expo": "^17.3.2",
    "@nx/node": "^17.3.2",
    "@types/react": "~19.1.0",
    "nx": "^17.3.2",
    "typescript": "~5.9.2"
  },
  "private": true
}
